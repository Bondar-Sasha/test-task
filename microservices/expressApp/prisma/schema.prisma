generator client {
  provider = "prisma-client-js"
  output   = "../prisma_client"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://${env('POSTGRES_USER')}:${env('POSTGRES_PASSWORD')}@${env('POSTGRES_HOST')}:${env('POSTGRES_PORT')}/${env('POSTGRES_DB')}"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
