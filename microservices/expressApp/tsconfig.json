{
   "compilerOptions": {

      "module": "CommonJS",
      "esModuleInterop": true,
      "incremental": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,

      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
         "src/*": ["./src/*"],
         "@test_task/shared/*": ["../../shared/dist/*"]
      },
      "rootDirs": ["./src", "../../shared/dist"]
   },
   "include": ["src/**/*", "../../shared/dist/**/*"],
   "exclude": ["node_modules", "dist"]
}
