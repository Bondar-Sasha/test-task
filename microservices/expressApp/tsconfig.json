{
   "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
         "src/*": ["./src/*"],
         "@test_task/shared/*": ["../../shared/*"]
      },
      "rootDirs": ["./src", "../../shared"]
   },
   "include": ["src/**/*", "../../shared/**/*"],
   "exclude": ["node_modules", "dist"]
}
